{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/common": ["libs/common/src"],
      "@app/common/*": ["libs/common/src/*"],
      "@app/prisma": ["libs/prisma/src"],
      "@app/prisma/*": ["libs/prisma/src/*"],
      "@app/session": ["libs/session/src"],
      "@app/session/*": ["libs/session/src/*"],
      "@app/grpc": ["libs/grpc/src"],
      "@app/grpc/*": ["libs/grpc/src/*"],
      "@app/ws": ["libs/ws/src"],
      "@app/ws/*": ["libs/ws/src/*"],
      "@app/bull": ["libs/bull/src"],
      "@app/bull/*": ["libs/bull/src/*"]
    }
  }
}
