{
  "name": "boobit",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "generate:auth": "npx prisma generate --schema apps/auth/prisma/schema.prisma",
    "generate:balance": "npx prisma generate --schema apps/balance/prisma/schema.prisma",
    "generate:transaction": "npx prisma generate --schema apps/transaction/prisma/schema.prisma",
    "start:prod:auth": "npx prisma migrate deploy && node dist/apps/auth/main",
    "start:prod:balance": "npx prisma migrate deploy && node dist/apps/balance/main",
    "start:prod:transaction": "node dist/apps/transaction/main",
    "dev:auth": "concurrently -s all \"npx prisma generate --schema apps/auth/prisma/schema.prisma\" \"npx prisma migrate deploy --schema apps/auth/prisma/schema.prisma\" \"nest start auth --watch --debug\"",
    "dev:balance": "concurrently -s all \"npx prisma generate --schema apps/balance/prisma/schema.prisma\" \"npx prisma migrate deploy --schema apps/balance/prisma/schema.prisma\" \"nest start balance --watch --debug\"",
    "dev:transaction": "concurrently -s all \"npx prisma generate --schema apps/transaction/prisma/schema.prisma\" \"nest start transaction --watch --debug\""
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.2",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.4.7",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-ws": "^10.4.8",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connect-redis": "^7.1.1",
    "execa": "^9.5.1",
    "express-session": "^1.18.1",
    "ioredis": "^5.4.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "source-map-support": "^0.5.21",
    "sqlite": "^5.1.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/session(|/.*)$": "<rootDir>/libs/session/src/$1",
      "^@app/grpc(|/.*)$": "<rootDir>/libs/grpc/src/$1",
      "^@app/ws(|/.*)$": "<rootDir>/libs/ws/src/$1"
    }
  }
}